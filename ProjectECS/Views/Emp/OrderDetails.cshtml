@model IEnumerable<ProjectECS.Models.PreferredService>

@{
    ViewBag.Title = "OrderDetails";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<h2>OrderDetails</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ServiceDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Charge.ChargesID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ClientProduct.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.ClientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Service.ServiceName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ServiceDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate, "Date")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate, "Date")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Charge.ChargesPerDay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ClientProduct.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Client.ClientName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Service.ServiceName)
        </td>
        @if (item.Status == "Amount Paid")
        {
            <td>
                <button type="button" class="btn-success">Launch campaign</button>
            </td>
        }
        else if (item.Status == "Pending")
        {
            <td>
                <button type="button" class="btn-success">Send Reminder</button>
            </td>
        }
    </tr>
}

</table>
